[user]
	name = tar80
	email = tar80master@gmail.com
	signingkey = ;GPG keysのKey IDを貼り付け
[github]
	user = tar80
[init]
	defaultBranch = main
[core]
	editor = C:/bin/Scoop/apps/neovim-nightly/current/bin/nvim.exe --cmd 'let g:start_mode=\"compact\"'
	symlinks = true
	autocrlf = false
	safecrlf = true
	; pager = delta
	; pager = LESSCHARSET=utf-8 less -i
[pull]
	rebase = false
	; ff = only
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[difftool "vimdiff"]
	path = C:/bin/Scoop/apps/neovim-nightly/current/bin/nvim.exe
[interactive]
	diffFilter = delta --color-only --hunk-header-style=line-number
[delta]
	true-color = always
	syntax-theme = Catppuccin Macchiato
	file-style = "#8bd5ca" bold
	file-decoration-style = gray overline
	file-added-label = [new]
	file-copied-label = [remove]
	file-modified-label = [+]
	file-removed-label = [-]
	file-renamed-label = [→]
	hunk-header-style = syntax bold italic 237
	; hunk-header-style = omit
	line-numbers = true
	line-numbers-left-format = "{nm:>1}┊"
	line-numbers-left-style = red
	line-numbers-right-format = " {np:>1}┊"
	line-numbers-right-style = green
	line-numbers-zero-style = gray
	line-numbers-minus-style = red bold
	line-numbers-plus-style = green bold
	zero-style = syntax
	minus-emph-style = normal "#96374f"
	minus-style = normal "#602d3d"
	plus-emph-style = syntax bold "#366c3c"
	plus-style = syntax "#2b4930"
	whitespace-error-style = gray reverse
	selected = manager-core
[credential "helperselector"]
	selected = manager-core
